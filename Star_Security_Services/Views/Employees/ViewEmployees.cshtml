@model IEnumerable<Star_Security_Services.Models.Data.Employee>

@{
    ViewData["Title"] = "ViewEmployees";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}

<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Employee Table</h2>
    </div>
</div>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["msg"]

       
    </div>
}
@if (TempData["edit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["edit"]

    </div>
}
@if (TempData["del"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["del"]

    </div>
}
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="AddEmployee">Add Employee</a>  </li>
    </ul>
    <div class="container mb-3" >
    <form  asp-action="ViewEmployee" method="get">
        <input type="text" class="bg-dark text-light" placeholder="Search by Name" name="search" width="450px" height="120px"/>
        <input type="submit" class=" btn btn-dark btn-outline-info" value="Search" />
    </form>
    </div>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12">
                <div class="block margin-bottom-sm">
                    <div class="title"><strong>View Employee</strong></div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                <tr>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Emp_name)
                                    </th>
                                    
                                    <th>
                                            @Html.DisplayNameFor(model => model.Emp_qualification)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Emp_Grade)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.department.Dept_name)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.roles.Role_name)
                                    </th>
                                    <th>Action</th>
                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Emp_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Emp_qualification)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Emp_Grade)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.department.Dept_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.roles.Role_name)
                                        </td>
                                        <td>
                                         
                                            <a asp-action="DetailsEmployee" asp-controller="Employees" asp-route-id="@item.EmployeeCode">Details</a> 
                                       
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

