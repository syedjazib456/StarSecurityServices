@{
}
@model IEnumerable<Star_Security_Services.Models.Data.Admin>

@{
    ViewData["Title"] = "ViewAdmin";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Admin Table</h2>
    </div>
</div>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["msg"]


    </div>
}
@if (TempData["edit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["edit"]

    </div>
}
@if (TempData["del"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["del"]

    </div>
}
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="AddAdmin">Add Admin</a>  </li>
    </ul>
    <div class="container mb-3">
        <form asp-action="ViewAdmin" method="get">
            <input type="text" class="bg-dark text-light" placeholder="Search by Name" name="search" width="450px" height="120px" />
            <input type="submit" class=" btn btn-dark btn-outline-info" value="Search" />
        </form>
    </div>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12">
                <div class="block margin-bottom-sm">
                    <div class="title"><strong>View Admin</strong></div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                <tr>
                                    <th>
                                            @Html.DisplayNameFor(model => model.AdminName)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.AdminImage)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.AdminEmail)
                                    </th>


                                    <th>Action</th>
                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminName)
                                        </td>
                                        <td>
                                            <img src="~/images/@Html.DisplayFor(modelItem => item.AdminImage)" width="200px" height="200px">
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminEmail)
                                        </td>


                                        <td>

                                            <a asp-action="DetailsAdmin" asp-controller="Admin" asp-route-id="@item.AdminId">Details</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>
