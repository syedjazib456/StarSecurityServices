@model Star_Security_Services.Models.Data.Projects

@{
    ViewData["Title"] = "AddProject";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}

<!-- Page Header-->
<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Add Project</h2>
    </div>
</div>
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="ViewProject">Back to List</a>  </li>
    </ul>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">
            <!-- Horizontal Form-->
            <div class="col-lg-12">
                <div class="block">
                    <div class="title"><strong class="d-block">Project</strong></div>
                    <div class="block-body">
                        <form class="form-horizontal" asp-action="AddProject" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="ProjectName" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="ProjectName" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="ProjectName" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Pr_image" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Pr_image" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="ProjectImage" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Project_createdate" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Project_createdate" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="Project_createdate" class="text-danger"></span>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Project_enddate" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Project_enddate" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="Project_enddate" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Client_id" class="col-sm-3 form-control-label">Select Client</label>
                                <div class="col-sm-9">
                                    <select asp-for="Client_id"  class="form-control mb-3 mb-3">
                                        <option disabled selected>--Select Project--</option>
                                        @foreach (var data in ViewBag.client)
                                        {
                                            <option value="@data.ClientId">@data.ClientName</option>
                                        }
                                    </select>
                                </div>

                            </div>

                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <input type="submit" value="Add Project" class="btn btn-primary">
                                </div>
                             
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

