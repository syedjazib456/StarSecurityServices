@model IEnumerable<Star_Security_Services.Models.Data.Vacancies>

@{
    ViewData["Title"] = "ViewVacancy";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Vacancy List</h2>
    </div>
</div>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["msg"]

       
    </div>
}
@if (TempData["edit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["edit"]

    </div>
}
@if (TempData["del_pr"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["del_vac"]

    </div>
}
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="AddVacancy">Add Vacancy</a>  </li>
    </ul>
    <div class="container mb-3" >
    <form  asp-action="ViewVacancy" method="get">
        <input type="text" class="bg-dark text-light" placeholder="Search by Name" name="search" width="450px" height="120px"/>
        <input type="submit" class=" btn btn-dark btn-outline-info" value="Search" />
    </form>
    </div>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12">
                <div class="block margin-bottom-sm">
                    <div class="title"><strong>View Vacancies</strong></div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                <tr>
                                    <th>
                                            @Html.DisplayNameFor(model => model.PostName)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.JobDescription)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Task1)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Task2)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Task3)
                                    </th>
                                 
                                    <th>Action</th>
                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PostName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.JobDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Task1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Task2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Task3)
                                        </td>
                                        <td>

                                            <a asp-action="VacancyDetails" asp-controller="Vacancies" asp-route-id="@item.ID">Details</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

