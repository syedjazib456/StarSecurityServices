@model Star_Security_Services.Models.Data.Vacancies

@{
    ViewData["Title"] = "DeleteVacancy";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}
<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Delete Confirmation</h2>
    </div>
</div>



<section class="no-padding-bottom">
    <div class="container-fluid">
        <div class="public-user-block block">
            <div class="row d-flex align-items-center">
