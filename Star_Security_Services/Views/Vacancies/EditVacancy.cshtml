
@model Star_Security_Services.Models.Data.Vacancies

@{
    ViewData["Title"] = "EditClient";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<!-- Page Header-->
<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Edit Vacancy</h2>
    </div>
</div>
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="ViewVacancy">Back to List</a>  </li>
    </ul>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">
            <!-- Horizontal Form-->
            <div class="col-lg-12">
                <div class="block">
                    <div class="title"><strong class="d-block">Client</strong></div>
                    <div class="block-body">
                        <form class="form-horizontal" asp-action="EditVacancy" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ID" />
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="PostName" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="PostName" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="PostName" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="JobDescription" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="JobDescription" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="JobDescription" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Task1" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Task1" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="Task1" class="text-danger"></span>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Task2" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Task2" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="Task2" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Task3" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Task3" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="Task3" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <input type="submit" value="Edit Vacancy" class="btn btn-primary">
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
