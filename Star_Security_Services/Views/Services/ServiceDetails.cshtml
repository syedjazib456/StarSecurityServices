@model Star_Security_Services.Models.Data.Services

@{
    ViewData["Title"] = "ServiceDetails";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Service Details</h2>
    </div>
</div>



<section class="no-padding-bottom">
    <div class="container-fluid">
        <div class="public-user-block block">
            <div class="row d-flex align-items-center">
                <div class="col-lg-4 d-flex align-items-center">

                    <strong class="d-block"> @Html.DisplayNameFor(model => model.ServiceName)</strong>
                </div>
                <div class="col-lg-8 text-center">
                    <div class="contributions"> @Html.DisplayFor(model => model.ServiceName)</div>
                </div>

            </div>
        </div>

        <div class="public-user-block block">
            <div class="row d-flex align-items-center">
                <div class="col-lg-4 d-flex align-items-center">

                    <strong class="d-block"> @Html.DisplayNameFor(model => model.ServiceImage)</strong>
                </div>
                <div class="col-lg-8 ">
                    <div class="stats-with-chart-1 block">
                        <img src="~/images/@Html.DisplayFor(model => model.ServiceImage)" width="200px" height="200px">

                    </div>
                </div>
            </div>
        </div>

        @*  Buttons *@
        <div class="public-user-block block">
            <div class="row d-flex align-items-center">
                <div class="col-lg-4 d-flex align-items-center">

                    <strong class="d-block">Actions</strong>
                </div>
                <div class="col-lg-8 text-center row megamenu-buttons ">
                    <div class="col-lg-2 col-md-4 col-lg-4"><a asp-action="DeleteService" asp-route-id="@Model.ServiceID" class="d-block megamenu-button-link bg-danger text-light"><strong>Delete</strong></a></div>
                    <div class="col-lg-2 col-md-4 col-lg-4"><a asp-action="EditService" asp-route-id="@Model.ServiceID" class="d-block megamenu-button-link bg-info text-light"><strong>Edit</strong></a></div>
                </div>

            </div>
        </div>
    </div>
</section>
