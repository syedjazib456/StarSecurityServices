
@model Star_Security_Services.Models.Data.Industries

@{
    ViewData["Title"] = "EditIndustry";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<!-- Page Header-->
<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Edit Industry</h2>
    </div>
</div>
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="DetailsIndustry">Back to List</a>  </li>
    </ul>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">
            <!-- Horizontal Form-->
            <div class="col-lg-12">
                <div class="block">
                    <div class="title"><strong class="d-block">Industry</strong></div>
                    <div class="block-body">
                        <form class="form-horizontal" asp-action="EditIndustry" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IndustryId" />
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="IndustryName" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="IndustryName" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="IndustryName" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label" asp-for="Ind_image" class="control-label"> </label>
                                <div class="col-sm-9">
                                    <input id="inputHorizontalSuccess" asp-for="Ind_image" class="form-control" class="form-control form-control-success" />
                                </div>
                                <span asp-validation-for="Ind_image" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <input type="submit" value="Edit Industry" class="btn btn-primary">
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
