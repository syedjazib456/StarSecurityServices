@{
}
@model IEnumerable<Star_Security_Services.Models.Data.Contact>

@{
    ViewData["Title"] = "ViewContact";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom"> Messages From Front-End</h2>
    </div>
</div>

<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home">Home</a></li>
     
    </ul>
    <div class="container mb-3">
        @if (TempData["del"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["del"]

            </div>
        }
    </div>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12">
                <div class="block margin-bottom-sm">
                    <div class="title"><strong>View Messages</strong></div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                <tr>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Subject)
                                    </th>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Message)
                                    </th>
                                    <th>Action</th>
                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Subject)
                                        </td>
                                      
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </td>

                                        <td>

                                            <a class=" d-block megamenu-button-link bg-danger text-center text-light" asp-action="DeleteMsg" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

