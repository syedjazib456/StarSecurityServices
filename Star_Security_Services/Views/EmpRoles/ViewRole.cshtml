@model IEnumerable<Star_Security_Services.Models.Data.EmpRoles>

@{
    ViewData["Title"] = "ViewRole";
    Layout = "~/Views/Shared/_LayoutOfficials.cshtml";
}


<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Role Table</h2>
    </div>
</div>
@if (TempData["add"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["add"]


    </div>
}
@if (TempData["edit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["edit"]

    </div>
}
@if (TempData["del"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["del"]

    </div>
}
<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active"><a asp-action="AddRole">Add Role</a>  </li>
    </ul>
    <div class="container mb-3">
        <form asp-action="ViewDept" method="get">
            <input type="text" class="bg-dark text-light" placeholder="Search by Name" name="search" width="450px" height="120px" />
            <input type="submit" class=" btn btn-dark btn-outline-info" value="Search" />
        </form>
    </div>
</div>
<section class="no-padding-top">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12">
                <div class="block margin-bottom-sm">
                    <div class="title"><strong>View Role</strong></div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                <tr>
                                    <th>
                                            @Html.DisplayNameFor(model => model.Role_name)
                                    </th>
                                  


                                    <th>Action</th>
                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Role_name)
                                        </td>
                                     


                                        <td>

                                            <a class=" d-block megamenu-button-link bg-danger text-center text-light" asp-action="DeleteRole" asp-controller="EmpRoles" asp-route-id="@item.Role_id">Delete</a>
                                            <a class="mt-2 d-block megamenu-button-link bg-info text-center text-light" asp-action="EditRole" asp-controller="EmpRoles" asp-route-id="@item.Role_id">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

