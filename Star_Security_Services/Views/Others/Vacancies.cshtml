@{
}
<style>
    .page-header-vacancy {
        padding-top: 12rem;
        padding-bottom: 6rem;
        background: url('../img/Star Security Services (1).png') top left no-repeat;
        background-size: cover;
        border-bottom: 2px ridge #355EFC;
        height:580px;
    }

        .page-header-vacancy .breadcrumb-item,
        .page-header-vacancy .breadcrumb-item a {
            font-weight: 500;
        }

            .page-header-vacancy .breadcrumb-item + .breadcrumb-item::before {
                color: var(--tertiary);
            }
</style>
<!-- Page Header Start -->
<div class="container-fluid page-header-vacancy mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
      
    </div>
</div>
<!-- Page Header End -->
<div class="container-xxl py-5">
    <div class="container">

        <div class="border rounded p-4 wow fadeInUp" data-wow-delay="0.1s">
            <div class="row g-4">
                @foreach(var data in Model){
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="h-100">
                        <div class="d-flex">

                            <div class="ps-3">
                                <h4>Require: @Html.DisplayFor(ModelItem=>data.PostName)</h4>
                                    <span><b>Job Description: </b><br> @Html.DisplayFor(ModelItem=>data.JobDescription)</span>
                                <h3 class="text-primary mt-2 mb-1">Responsiblities</h3>
                                    <ul>
                                        <li>@Html.DisplayFor(ModelItem=>data.Task1)</li>
                                        <li>@Html.DisplayFor(ModelItem=>data.Task2)</li>
                                        <li>@Html.DisplayFor(ModelItem=>data.Task3)</li>
                                </ul>
                                    <a href="https://secure.indeed.com/auth?hl=en_AE&co=AE&continue=https%3A%2F%2Fae.indeed.com%2Fthirdpartysignin%3Ffrom%3Dtp-semfirstjob%26from%3Djsfe-3pintercept-viewjob%26continueUrl%3D%252Fjobs%253Fq%253Dstar%252Bsecurity%252Bservices%2526vjk%253D9df4b9e0394760d5%26viewtype%3Dembedded%26xkcb%3DSoD_67M3EeOGQRRigR0LbzkdCdPP%26jk%3D9df4b9e0394760d5%26tk%3D1hmu32cmv235g007%26vjtk%3D1hmu32csa235g002&from=jsfe-3pintercept-viewjob&branding=third-party-applies" class="btn btn-primary btn-outline-info">Apply now </a>
                            </div>
                            <div class="border-end d-none d-lg-block"></div>
                        </div>
                        <div class="border-bottom mt-4 d-block d-lg-none"></div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>